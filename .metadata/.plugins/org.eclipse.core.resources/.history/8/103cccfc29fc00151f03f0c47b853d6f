package hu.elte;

import java.io.Console;
import java.util.Scanner;
import java.util.function.Consumer;

public class ConsoleSignal extends Signal{

	@Override
	public void run() {
		while (true) {
			Consumer<String> c = (x) -> System.out.print(new Scanner(System.in).nextLine() + "---------->");
			c.accept("");
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
	}

}
